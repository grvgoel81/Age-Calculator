<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/any_padding">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/et_first_name_margin_top"
        android:singleLine="true"
        android:hint="@string/label_first_name"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/any_margin"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFirstName"
        android:hint="@string/label_last_name"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/any_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLastName"
        android:hint="@string/label_date_picker"
        android:clickable="false"
        android:focusable="false"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnShowAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etBirthday"
        android:layout_margin="@dimen/btn_show_age_margin"
        android:text="@string/label_btn_show_age"
        android:textStyle="bold"
        android:textSize="@dimen/any_text_size"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@color/teal_200"/>

</androidx.constraintlayout.widget.ConstraintLayout>